{
    "gpu": {
        "use": true,
        "id": 0
    },
    
    "model": "GraphiT",
    "dataset": "ZINC",
    
    "out_dir": "out/GraphiT_ZINC_gckn_edgeRW/",
    
    "params": {
        "seed": 41,
        "epochs": 1000,
        "batch_size": 32,
        "init_lr": 0.0007,
        "lr_reduce_factor": 0.5,
        "lr_schedule_patience": 25,
        "min_lr": 1e-5,
        "weight_decay": 0,
        "print_epoch_interval": 5,
        "max_time": 24
    },
    
    "net_params": {
        "double_attention": false,

        "L": 10,
        "hidden_dim": 64,
        "out_dim": 64,
        "n_heads": 8,

        "residual": true,
        "readout": "sum",
        "in_feat_dropout": 0.0,
        "dropout": 0.0,
        "feedforward": true,
        "layer_norm": false,
        "batch_norm": true,
        "instance_norm": false,
        
        "use_node_pe": "sum",
        "update_pos_enc": false,
        "node_pe_params": {
            "node_pe": "gckn",
            "dim": 64,
            "path": 8,
            "sigma": 0.6,
            "pooling": "sum",
            "aggregation": true,
            "normalize": true,
            "encode_edges": true
        },

        "use_attention_pe": true,
        "attention_pe_params": {
            "attention_pe": "edge_RW",
            "zero_diag": "true",
            "p_steps": 16,
            "beta": 0.25
        },
        "last_layer_full_attention": false,
        "normalize_degree": true,
        
        "use_edge_features": false,
        "update_edge_features": false,

        "virtual_node": false
    }
}