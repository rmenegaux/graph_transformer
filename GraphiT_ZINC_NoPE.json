{
    "gpu": {
        "use": true,
        "id": 0
    },
    
    "model": "GraphiT",
    "dataset": "ZINC",
    
    "out_dir": "out/GraphiT_ZINC_PE_VirtualNode/",
    
    "params": {
        "seed": 41,
        "epochs": 1000,
        "batch_size": 32,
        "init_lr": 0.0007,
        "lr_reduce_factor": 0.5,
        "lr_schedule_patience": 25,
        "min_lr": 1e-5,
        "weight_decay": 0.0,
        "print_epoch_interval": 5,
        "max_time": 24
    },
    
    "net_params": {
        "double_attention": false,

        "L": 10,
        "hidden_dim": 64,
        "out_dim": 64,
        "n_heads": 8,

        "residual": true,
        "readout": "first",
        "in_feat_dropout": 0.0,
        "dropout": 0.0,
        "feedforward": true,
        "layer_norm": false,
        "batch_norm": true,
        
        "use_node_pe": true,
        "update_pos_enc": false,
        "concat_h_p": false,
        "node_pe_params": {
            "node_pe": "rand_walk",
            "p_steps": 16
        },

        "use_attention_pe": true,
        "attention_pe_params": {
            "attention_pe": "rand_walk",
            "zero_diag": "false",
            "p_steps": 16,
            "beta": 0.25
        },
        
        "use_edge_features": true,
        "update_edge_features": false,

        "virtual_node": true
    }
}